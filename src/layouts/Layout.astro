---
import { pwaInfo } from 'virtual:pwa-info'

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0,viewport-fit=cover">
    <link rel="icon" type="image/svg+xml" href="/icon.svg">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180">
    <link rel="mask-icon" href="/icon.svg" color="#FFFFFF">
    <meta name="theme-color" content="#212129">
    <meta name="generator" content={Astro.generator}>
    <title>{title}</title>
    <meta name="description" content="A Minimal web UI for GeminiPro Chat.">
    { import.meta.env.HEAD_SCRIPTS && <Fragment set:html={import.meta.env.HEAD_SCRIPTS } /> }
    { pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} /> }
    { import.meta.env.PROD && pwaInfo && <Fragment set:html={pwaInfo.registerSW.scriptTag} /> }
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --c-bg: #fbfbfb;
    --c-fg: #444444;
    --c-scroll: #d9d9d9;
    --c-scroll-hover: #bbbbbb;
    --c-sidebar-bg: #f0f0eb;
    --c-sidebar-border: #e0dfd8;
    scrollbar-color: var(--c-scroll) var(--c-bg);
  }

  html {
    font-family: system-ui, sans-serif;
    background-color: var(--c-bg);
    color: var(--c-fg);
  }

  html.dark {
    --c-bg: #212129;
    --c-fg: #ddddf0;
    --c-scroll: #333333;
    --c-scroll-hover: #555555;
    --c-sidebar-bg: #1a1a22;
    --c-sidebar-border: #2a2a36;
  }

  main.app-content {
    display: flex;
    height: 100vh;
    height: 100dvh;
    overflow: hidden;
  }

  @media (min-width: 1024px) {
    main.app-content {
      margin-left: 260px;
    }
  }

  .chat-panel {
    flex: 1;
    min-width: 0;
    overflow-y: auto;
    padding: 2rem 2rem 4rem;
  }

  @media (max-width: 1023px) {
    .chat-panel {
      padding-top: 3.5rem;
    }
  }

  ::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }
  ::-webkit-scrollbar-thumb {
    background-color: var(--c-scroll);
    border-radius: 4px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background-color: var(--c-scroll-hover);
  }
  ::-webkit-scrollbar-track {
    background-color: var(--c-bg);
  }

  /* Sidebar panel */
  .sidebar-panel {
    width: 260px;
    background-color: var(--c-sidebar-bg);
    border-right: 1px solid var(--c-sidebar-border);
  }

  .sidebar-gradient-text {
    background-image: linear-gradient(to right, #38bdf8, #34d399);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

  .sidebar-hamburger {
    background-color: var(--c-sidebar-bg);
    border: 1px solid var(--c-sidebar-border);
    box-shadow: 0 1px 4px rgba(0,0,0,0.08);
    color: var(--c-fg);
  }

  .sidebar-new-chat {
    background: linear-gradient(135deg, #38bdf8, #34d399);
    color: #fff;
  }

  .sidebar-new-chat:hover {
    opacity: 0.9;
    box-shadow: 0 4px 14px rgba(56, 189, 248, 0.35);
    transform: translateY(-1px);
  }

  .sidebar-new-chat:active {
    transform: translateY(0);
    opacity: 0.85;
  }

  .sidebar-item-empty {
    border: 1px dashed var(--c-sidebar-border);
  }

  .sidebar-item-empty:hover {
    background-color: rgba(100, 116, 139, 0.07);
    border-color: rgba(100, 116, 139, 0.4);
  }

  .sidebar-item-active {
    background-color: rgba(56, 189, 248, 0.08);
    border: 1px solid rgba(56, 189, 248, 0.15);
  }

  .sidebar-icon-btn {
    opacity: 0.45;
    color: var(--c-fg);
  }

  .sidebar-icon-btn:hover {
    opacity: 1;
    background-color: rgba(100, 116, 139, 0.15);
  }

  .sidebar-edit-box {
    background-color: rgba(100, 116, 139, 0.05);
  }

  .sidebar-textarea {
    color: var(--c-fg);
  }

  .sidebar-save-btn {
    background: linear-gradient(135deg, #38bdf8, #34d399);
    color: #fff;
  }

  .sidebar-save-btn:hover {
    opacity: 0.9;
  }

  .sidebar-cancel-btn {
    background-color: rgba(100, 116, 139, 0.1);
    color: var(--c-fg);
  }

  .sidebar-cancel-btn:hover {
    background-color: rgba(100, 116, 139, 0.2);
  }

  .sidebar-temp-badge {
    background-color: rgba(56, 189, 248, 0.1);
    color: #38bdf8;
    font-size: 0.7rem;
  }

  .sidebar-theme-btn {
    color: var(--c-fg);
  }

  .sidebar-theme-btn:hover {
    background-color: rgba(100, 116, 139, 0.12);
  }

  .sidebar-footer-link {
    color: var(--c-fg);
  }

  /* Temperature range slider */
  .sidebar-range {
    -webkit-appearance: none;
    appearance: none;
    height: 4px;
    border-radius: 2px;
    background: linear-gradient(
      to right,
      #38bdf8 0%,
      #34d399 var(--pct, 30%),
      rgba(100, 116, 139, 0.2) var(--pct, 30%)
    );
    outline: none;
    transition: background 0.1s;
  }

  .sidebar-range::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: var(--c-bg);
    border: 2px solid #38bdf8;
    cursor: pointer;
    box-shadow: 0 1px 4px rgba(0,0,0,0.15);
    transition: transform 0.15s, box-shadow 0.15s;
  }

  .sidebar-range::-webkit-slider-thumb:hover {
    transform: scale(1.25);
    box-shadow: 0 0 0 3px rgba(56, 189, 248, 0.2);
  }

  .sidebar-range::-moz-range-thumb {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: var(--c-bg);
    border: 2px solid #38bdf8;
    cursor: pointer;
  }
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation: none;
    mix-blend-mode: normal;
  }

  .dark::view-transition-old(root) {
    z-index: 1;
  }

  .dark::view-transition-new(root) {
    z-index: 999;
  }

  ::view-transition-old(root) {
    z-index: 999;
  }

  ::view-transition-new(root) {
    z-index: 1;
  }
</style>

<script>
const initTheme = () => {
  const darkSchema
    = window.matchMedia
    && window.matchMedia('(prefers-color-scheme: dark)').matches
  const storageTheme = localStorage.getItem('theme')
  if (storageTheme) {
    document.documentElement.classList.toggle(
      'dark',
      storageTheme === 'dark',
    )
  } else {
    document.documentElement.classList.toggle('dark', darkSchema)
  }
}

initTheme()
</script>
